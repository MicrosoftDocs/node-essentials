{
    "compilerOptions": {
      "target": "ES2022",                       // Use a modern target for better ESM support
      "module": "ESNext",                       // Generate ESM modules
      "moduleResolution": "node",               // Use Node.js module resolution
      "noImplicitAny": false,  
      "strict": false,                          // Enable all strict type-checking options
      "esModuleInterop": true,                  // Enables emit interoperability between CommonJS and ES Modules
      "allowSyntheticDefaultImports": true,     // Allow default imports from modules with no default export
      "skipLibCheck": true,                     // Skip type checking of declaration files
      "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
      "types": ["node"],                        // Specify type package
      "outDir": "./dist",
      "sourceMap": true                         // Generate corresponding '.map' file
    },
    "include": ["src"],                         // Specify which files to include
    "exclude": ["node_modules"]                 // Specify which files to exclude
}